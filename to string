#include <iostream>
#include<string>
#include<algorithm>
using namespace std;
int main() {
    string s;
    getline(cin,s);
    cout<<s.size()<<endl;
    int i=0;
    s[i]='a';
    cout<<s<<endl;
    int half_size = s.size() / 2;
    reverse(s.begin(), s.begin() + half_size);
    cout<<s<<endl;
    cout<<s.substr(half_size)<<endl;
    int x=123;
    string r=to_string(x);
    cout<<r<<endl;
    
    // (2,2) FIRST 2 DEFINE INDEX OF SUB STRING AND 2ND 2 DDEFINE LENGTH//


    return 0;
}
