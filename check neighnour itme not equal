 Online C++ compiler to run C++ program online
#include <iostream>
#include<string>
#include<algorithm>
using namespace std;
int main() {
    string s;
    getline(cin,s);
    cout<<s.size()<<endl;
    int i=0;
    int count=0;
    for(int i=0;i<s.size()-1;i++)
    {
       int j=i+1;
        if(s[i]!=s[j] && s[i-1]!=s[i] )
        {
            count++;
        }
    
    }
    cout<<count<<endl;
    

    return 0;
}
